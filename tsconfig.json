{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "types": ["node"],
    "paths": {
      "@/*": ["./src/*"]
    },
    "skipLibCheck": true,
    "allowImportingTsExtensions": false,
    "module": "esnext"
  },
  "exclude": ["node_modules"],
  "include": [
    "./src/**/*",
    "index.d.ts",
    ".eslintrc.js",
    "babel.config.js",
    "nativewind-env.d.ts",
    "index.js"
  ]
}
